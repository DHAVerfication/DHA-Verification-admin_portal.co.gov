# Replit Production Environment Variables
NODE_ENV=production
PORT=5000
HOST=0.0.0.0
REPLIT=true

# Ensure PORT is always 5000 for deployment (not PGPORT 5432)
# PGPORT is for PostgreSQL database, PORT is for web server

# Memory Limits
NODE_OPTIONS="--max-old-space-size=3072"

# TypeScript Configuration
TSC_COMPILE_ON_ERROR=true
SKIP_PREFLIGHT_CHECK=true

# Development Features
VITE_DEV_SERVER_PORT=3001
VITE_DEV_SERVER_HOST=0.0.0.0